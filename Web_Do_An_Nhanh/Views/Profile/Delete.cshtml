@model Web_Do_An_Nhanh.Models.KhachHang

@{
    ViewBag.Title = "Xóa Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-jollibee-primary {
        color: #fcc200 !important;
    }
    .text-jollibee-danger {
        color: #dc3545 !important;
    }
    .bg-jollibee-danger {
        background-color: #dc3545 !important;
    }
</style>

<div class="container py-5">
    <div class="delete-container" style="max-width: 550px; margin:auto">
        <div class="card shadow-lg p-4 p-md-5 border-0 rounded-4">

            <div class="text-center mb-4">
                <i class="fas fa-exclamation-triangle fa-5x text-jollibee-danger mb-3"></i>
                <h3 class="card-title fw-bolder text-dark mb-2">
                    BẠN CÓ CHẮC CHẮN MUỐN XÓA TÀI KHOẢN?
                </h3>
                <p class="text-muted lead">Hành động này không thể hoàn tác.</p>
            </div>

            <div class="alert alert-danger p-3 mb-4 border-0">
                <h5 class="fw-bold mb-3 text-dark">THÔNG TIN TÀI KHOẢN SẼ BỊ XÓA:</h5>

                <dl class="row mb-0">

                    <dt class="col-sm-4 fw-bold text-muted">@Html.DisplayNameFor(model => model.TenKH):</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.TenKH)</dd>

                    <dt class="col-sm-4 fw-bold text-muted">@Html.DisplayNameFor(model => model.Email):</dt>
                    <dd class="col-sm-8 text-jollibee-danger">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-bold text-muted">@Html.DisplayNameFor(model => model.SDT):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SDT)</dd>

                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-grid gap-2">

                    <button type="submit" class="btn btn-danger btn-lg fw-bold shadow">
                        <i class="fas fa-trash me-2"></i> XÁC NHẬN XÓA TÀI KHOẢN
                    </button>

                    <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary btn-lg fw-bold mt-2">
                        <i class="fas fa-arrow-left me-2"></i> Hủy và Quay lại
                    </a>
                </div>
            }

        </div>
    </div>
</div>