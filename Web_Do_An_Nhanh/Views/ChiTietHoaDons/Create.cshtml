@model Web_Do_An_Nhanh.Models.ChiTietHoaDon
@{
    bool isEdit = Model != null && Model.MaHD > 0;
    ViewBag.Title = isEdit ? "Sửa chi tiết hóa đơn" : "Thêm chi tiết hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    int? maHDBack = null;
    if (Model != null)
    {
        maHDBack = Model.MaHD;
    }
    else
    {
        maHDBack = ViewBag.MaHDDangChon as int?;
    }
}

<div class="container py-4" style="max-width:700px">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h3 class="text-danger text-center fw-bold mb-4">
                @(isEdit ? "SỬA CHI TIẾT HÓA ĐƠN" : "THÊM MÓN CHO HÓA ĐƠN")
            </h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mã hóa đơn</label>
                        @if (isEdit)
                        {
                            @Html.DropDownList("MaHD", null, new { @class = "form-select", disabled = "disabled" })
                            @Html.HiddenFor(m => m.MaHD)
                        }
                        else
                        {
                            @Html.DropDownList("MaHD", null, new { @class = "form-select" })
                        }
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Sản phẩm</label>
                        @if (isEdit)
                        {
                            @Html.DropDownList("MaSP", null, new { @class = "form-select", disabled = "disabled" })
                            @Html.HiddenFor(m => m.MaSP)
                        }
                        else
                        {
                            @Html.DropDownList("MaSP", null, new { @class = "form-select" })
                        }
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Số lượng</label>
                        @Html.TextBoxFor(m => m.SoLuong,
                            new { @class = "form-control", type = "number", min = "1" })
                        @Html.ValidationMessageFor(m => m.SoLuong, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Đơn giá</label>
                        @Html.TextBoxFor(m => m.DonGia,
                            new { @class = "form-control", type = "number", step = "1000" })
                        @Html.ValidationMessageFor(m => m.DonGia, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", new { maHD = maHDBack })"
                       class="btn btn-outline-secondary">
                        ← Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        Lưu
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
