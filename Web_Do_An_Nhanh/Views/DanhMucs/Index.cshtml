@model IEnumerable<Web_Do_An_Nhanh.Models.DanhMuc>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">

    @if (TempData["ImportMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["ImportMessage"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">

        <div class="d-flex align-items-center">
            <div style="width:42px;height:42px;border-radius:50%;display:inline-flex;
                 align-items:center;justify-content:center;background:#eff6ff;color:#2563eb;
                 margin-right:.75rem;font-size:1.3rem;">
                <i class="fas fa-tags"></i>
            </div>
            <h3 class="fw-bold mb-0" style="color:#2563eb;">Quản lý danh mục</h3>
        </div>

        <div>
            <a href="@Url.Action("Create")" class="btn btn-success fw-bold me-2">
                <i class="fas fa-plus-circle me-1"></i> Thêm danh mục mới
            </a>

            <a href="@Url.Action("Export", new { searchString = ViewBag.CurrentSearch })"
               class="btn btn-outline-secondary me-2">
                <i class="fas fa-file-export me-1"></i> Xuất Excel
            </a>

            <a href="@Url.Action("Import")" class="btn btn-outline-primary">
                <i class="fas fa-file-import me-1"></i> Import từ file
            </a>
        </div>
    </div>

    @using (Html.BeginForm("Index", "DanhMucs", FormMethod.Get))
    {
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="input-group">
                    @Html.TextBox("searchString",
                        ViewBag.CurrentSearch as string,
                        new { @class = "form-control", placeholder = "Tìm theo tên hoặc mô tả..." })
                    &nbsp;
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead style="background-color:#fef3c7;">
                    <tr class="fw-bold text-muted">
                        <th style="width:60px;">#</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th class="text-end" style="width:250px;">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int page = ViewBag.Page;
                        int pageSize = ViewBag.PageSize;
                        int totalItems = ViewBag.TotalItems;
                        int stt = (page - 1) * pageSize;
                    }

                    @if (Model != null && Model.Any())
                    {
                        foreach (var dm in Model)
                        {
                            stt++;
                            <tr>
                                <td>@stt</td>
                                <td class="fw-semibold">@dm.TenDM</td>
                                <td>@dm.MoTa</td>

                                <td class="text-end">
                                    <a href="@Url.Action("Details", new { id = dm.MaDM })"
                                       class="btn btn-sm btn-outline-secondary me-1">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>

                                    <a href="@Url.Action("Edit", new { id = dm.MaDM })"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = dm.MaDM })"
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                Không có danh mục nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @{
        int p = ViewBag.Page;
        int ps = ViewBag.PageSize;
        int total = ViewBag.TotalItems;
        int totalPages = ViewBag.TotalPages;

        int fromItem = total == 0 ? 0 : (p - 1) * ps + 1;
        int toItem = total == 0 ? 0 : (p * ps > total ? total : p * ps);
    }

    <p class="text-muted mt-2">
        Hiển thị @fromItem - @toItem trong tổng số @total danh mục.
    </p>

    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination">
                <li class="page-item @(p == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = p - 1, searchString = ViewBag.CurrentSearch })">«</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(p == i ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { page = i, searchString = ViewBag.CurrentSearch })">@i</a>
                    </li>
                }

                <li class="page-item @(p == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = p + 1, searchString = ViewBag.CurrentSearch })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>
