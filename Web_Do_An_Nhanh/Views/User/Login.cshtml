@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng nhập khách hàng Jollibee";
}

<style>
    .text-jollibee-primary {
        color: #fcc200 !important;
    }

    .text-jollibee-danger {
        color: #dc3545 !important;
    }
</style>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<div class="container py-5">
    <div class="login-container mt-5" style="max-width: 420px; margin:auto">
        <div class="card shadow-lg p-4 p-md-5 border-0 rounded-4">

            <div class="text-center mb-4">
                <img src="~/Content/Images/logo_1.png" alt="Jollibee Logo" style="max-height: 50px;" class="mb-3" />
            </div>

            <h3 class="card-title text-center fw-bolder text-jollibee-danger mb-4">
                ĐĂNG NHẬP
            </h3>
            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center alert alert-danger p-2">
                    <i class="fas fa-exclamation-circle me-1"></i> @ViewBag.Error
                </p>
            }
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope text-jollibee-danger"></i></span>
                        <input type="email" name="Email" class="form-control form-control-lg" required placeholder="Nhập email của bạn" />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label fw-bold">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock text-jollibee-danger"></i></span>
                        <input type="password" name="Password" class="form-control form-control-lg" required placeholder="Nhập mật khẩu" />
                    </div>
                </div>

                <button type="submit" class="btn btn-danger w-100 btn-lg fw-bold mb-3 shadow">
                    <i class="fas fa-sign-in-alt me-2"></i> ĐĂNG NHẬP
                </button>
            }

            <p class="text-center mt-3">
                <a href="@Url.Action("ForgotPassword", "User")" class="text-decoration-none fw-bold text-jollibee-danger">
                    Quên mật khẩu?
                </a>
            </p>

            <p class="text-center mt-3">
                Chưa có tài khoản?
                <a href="@Url.Action("Register", "User")" class="text-decoration-none fw-bold text-jollibee-danger">
                    Đăng ký ngay
                </a>
            </p>

            <hr class="my-4" />

            <div class="text-center">
                <a href="@Url.Action("Login", "NhanVien")" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="fas fa-user-shield me-1"></i> Đăng nhập nhân viên
                </a>
            </div>
        </div>
    </div>
</div>