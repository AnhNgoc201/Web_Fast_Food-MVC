@model PagedList.IPagedList<Web_Do_An_Nhanh.Models.SanPham>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Thực Đơn Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center text-danger mb-4 fw-bold">THỰC ĐƠN JOLLIBEE 🍔🍟</h2>
    <p class="text-center text-muted">
        Khám phá các món ăn ngon nhất của chúng tôi.
    </p>
    <div class="d-flex justify-content-between align-items-center mb-4">

        @if (ViewBag.TenDM != null)
        {
            <h2 class="text-danger fw-bold mb-0">@ViewBag.TenDM.ToUpper()</h2>
        }

        <div class="text-end">
            <a href="@Url.Action("TimKiemNangCao", "SanPhams")"
               class="btn btn-danger btn-lg fw-bold text-uppercase shadow-lg jollibee-button">
                TÌM MÓN PHÙ HỢP VỚI BẠN
            </a>
        </div>
    </div>

    <hr class="mb-5" />
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 product-card">

                    <div class="product-image-container">
                        <img src="~/Content/Images/@item.HinhAnh"
                             class="card-img-top product-img"
                             alt="@item.TenSP">
                        @if (item.TrangThai == true)
                        {
                            <span class="badge bg-success position-absolute top-0 start-0 m-2">CÒN HÀNG</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary position-absolute top-0 start-0 m-2">HẾT HÀNG</span>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-danger mb-1">@Html.DisplayFor(modelItem => item.TenSP)</h5>
                        <p class="card-text text-muted small">@Html.DisplayFor(modelItem => item.DanhMuc.TenDM)</p>
                    </div>

                    <div class="card-footer bg-white border-0 pt-0">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <p class="fs-4 fw-bold text-dark mb-0">@string.Format("{0:N0} VNĐ", item.Gia)</p>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Details", "SanPhams", new { id = item.MaSP })"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-eye me-1"></i> Xem Chi Tiết
                            </a>

                            @if (item.TrangThai == true)
                            {
                                <text>
                                    @using (Html.BeginForm("ThemMatHang", "DatHang", FormMethod.Post, new { @class = "d-grid gap-2 mt-2" }))
                                    {
                                        <input type="hidden" name="msp" value="@item.MaSP" />
                                        <input type="hidden" name="soluong" value="1" />

                                        <button type="submit" class="btn btn-danger btn-sm w-100">
                                            <i class="fas fa-cart-plus me-1"></i> Thêm vào Giỏ Hàng
                                        </button>
                                    }
                                </text>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm mt-2" disabled>
                                    <i class="fas fa-ban me-1"></i> Hết Hàng
                                </button>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(
        Model,
        page => Url.Action("Index", new { page = page, maDM = ViewBag.MaDM }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 5,
            UlElementClasses = new[] { "pagination", "jolli-pagination" },
            LiElementClasses = new[] { "page-item" }
        }
    )
</div>


</div>

<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }

    .product-image-container {
        height: 200px;
        overflow: hidden;
        border-bottom: 1px solid #eee;
        position: relative;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Đảm bảo ảnh không bị méo */
    }
</style>