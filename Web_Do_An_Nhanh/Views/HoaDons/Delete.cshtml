@model Web_Do_An_Nhanh.Models.HoaDon

@{
    ViewBag.Title = "Xóa hóa đơn #" + Model.MaHD;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">

    <!-- Header -->
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#fee2e2;
             color:#dc2626;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-trash-can"></i>
        </div>
        <h3 class="fw-bold mb-0 text-danger">
            Xóa hóa đơn #@Model.MaHD
        </h3>
    </div>

    <!-- Cảnh báo -->
    <div class="alert alert-warning border-0 shadow-sm mb-3">
        <i class="fas fa-triangle-exclamation me-2"></i>
        Bạn có chắc chắn muốn xóa hóa đơn này không? Hành động này
        <strong>không thể hoàn tác</strong>.
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 fw-semibold">Khách hàng</div>
                <div class="col-md-9">
                    @(Model.KhachHang != null ? Model.KhachHang.TenKH : "(Khách lẻ)")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-semibold">Ngày lập</div>
                <div class="col-md-9">
                    @(Model.NgayLap.HasValue
                        ? Model.NgayLap.Value.ToString("dd/MM/yyyy HH:mm")
                        : "(Chưa có)")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-semibold">Tổng tiền</div>
                <div class="col-md-9">
                    @(Model.TongTien.HasValue ? Model.TongTien.Value.ToString("N0") : "0") đ
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-semibold">Địa chỉ</div>
                <div class="col-md-9">
                    @(!string.IsNullOrWhiteSpace(Model.DiaChi) ? Model.DiaChi : "Không có")
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.MaHD)

                <div class="mt-3">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash-can me-1"></i> Xóa
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>
