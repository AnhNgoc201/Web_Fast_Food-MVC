@model Web_Do_An_Nhanh.Models.NhanVien

@{
    ViewBag.Title = "Xóa nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#fef2f2;
             color:#dc2626;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-user-times"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#dc2626;">Xóa nhân viên</h3>
    </div>

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Bạn có chắc chắn muốn xóa nhân viên này không? Hành động này không thể hoàn tác.
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Mã nhân viên</dt>
                <dd class="col-sm-9">@Model.MaNV</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9 fw-semibold">@Model.TenNV</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">
                    @(Model.VaiTro != null ? Model.VaiTro.TenVT : "")
                </dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.SDT</dd>
            </dl>

            <div class="mt-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.MaNV)

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xóa
                    </button>
                    @Html.ActionLink("Hủy", "Index", null,
                        new { @class = "btn btn-secondary ms-2" })
                }
            </div>
        </div>
    </div>
</div>
