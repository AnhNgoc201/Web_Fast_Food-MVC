@{
    ViewBag.Title = "Import sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Import sản phẩm từ file CSV</h3>

@using (Html.BeginForm("Import", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label for="file">Chọn file CSV:</label>
        <input type="file" name="file" id="file" class="form-control" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Import</button>
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary ms-2" })
}
