@model Web_Do_An_Nhanh.Models.KhuyenMai

@{
    ViewBag.Title = "Chi tiết khuyến mãi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#eff6ff;
             color:#2563eb;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-info-circle"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#2563eb;">Chi tiết khuyến mãi</h3>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            @{
                var today = DateTime.Today;
                var hieuLuc = (Model.NgayBatDau <= today && today <= Model.NgayKetThuc);
            }

            <dl class="row mb-0">
                <dt class="col-sm-3">Mã khuyến mãi</dt>
                <dd class="col-sm-9">@Model.MaKM</dd>

                <dt class="col-sm-3">Tên khuyến mãi</dt>
                <dd class="col-sm-9 fw-semibold">@Model.TenKM</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.MoTa</dd>

                <dt class="col-sm-3">Phần trăm giảm</dt>
                <dd class="col-sm-9">@Model.PhanTramGiam %</dd>

                <dt class="col-sm-3">Ngày bắt đầu</dt>
                <dd class="col-sm-9">@(Model.NgayBatDau.HasValue ? Model.NgayBatDau.Value.ToString("dd/MM/yyyy") : "")</dd>

                <dt class="col-sm-3">Ngày kết thúc</dt>
                <dd class="col-sm-9">@(Model.NgayKetThuc.HasValue ? Model.NgayKetThuc.Value.ToString("dd/MM/yyyy") : "")</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (hieuLuc)
                    {
                        <span class="badge bg-success">Đang áp dụng</span>
                    }
                    else if (Model.NgayKetThuc < today)
                    {
                        <span class="badge bg-secondary">Đã kết thúc</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Chưa bắt đầu</span>
                    }
                </dd>
            </dl>

            <div class="mt-4">
                @Html.ActionLink("Sửa khuyến mãi", "Edit", new { id = Model.MaKM },
                    new { @class = "btn btn-primary me-2" })
                @Html.ActionLink("Quay lại danh sách", "Index", null,
                    new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
