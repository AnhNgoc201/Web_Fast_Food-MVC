@model Web_Do_An_Nhanh.Models.KhuyenMai

@{
    ViewBag.Title = "Thêm khuyến mãi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#eff6ff;
             color:#2563eb;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-tag"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#2563eb;">Thêm khuyến mãi mới</h3>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row">
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenKM, "Tên khuyến mãi", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.TenKM,
                                new { @class = "form-control", placeholder = "Nhập tên chương trình..." })
                            @Html.ValidationMessageFor(m => m.TenKM, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.PhanTramGiam, "Phần trăm giảm (%)", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.PhanTramGiam,
                                new { @class = "form-control", type = "number", min = "0", max = "100", step = "1" })
                            @Html.ValidationMessageFor(m => m.PhanTramGiam, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayBatDau, "Ngày bắt đầu", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.NgayBatDau,
                                "{0:yyyy-MM-dd}",
                                new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.NgayBatDau, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayKetThuc, "Ngày kết thúc", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.NgayKetThuc,
                                "{0:yyyy-MM-dd}",
                                new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.NgayKetThuc, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.MoTa, "Mô tả", new { @class = "form-label fw-semibold" })
                    @Html.TextAreaFor(m => m.MoTa, 4, 50,
                        new { @class = "form-control", placeholder = "Mô tả chi tiết chương trình..." })
                    @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Lưu khuyến mãi
                </button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
            }
        </div>
    </div>
</div>
