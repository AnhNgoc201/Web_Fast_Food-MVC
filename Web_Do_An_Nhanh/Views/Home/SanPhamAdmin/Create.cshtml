@model Web_Do_An_Nhanh.Models.SanPham

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">

    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#eff6ff;
             color:#2563eb;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-box"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#2563eb;">Thêm sản phẩm mới</h3>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            @using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenSP, "Tên sản phẩm", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.TenSP,
                                new { @class = "form-control", placeholder = "Nhập tên sản phẩm..." })
                            @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Gia, "Giá bán", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Gia,
                                new { @class = "form-control", type = "number", min = "0", step = "1000" })
                            @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.Label("MaDM", "Danh mục", new { @class = "form-label fw-semibold" })
                            @Html.DropDownListFor(m => m.MaDM,
                                (SelectList)ViewBag.MaDM,
                                "-- Chọn danh mục --",
                                new { @class = "form-select" })
                            @Html.ValidationMessage("MaDM", "", new { @class = "text-danger" })
                        </div>

                        @{
                            bool trangThai = true;
                            if (Model != null && Model.TrangThai.HasValue)
                            {
                                trangThai = Model.TrangThai.Value;
                            }
                        }
                        <div class="mb-3 form-check">
                            @Html.CheckBox("TrangThai", trangThai, new { @class = "form-check-input" })
                            <label class="form-check-label fw-semibold" for="TrangThai">Đang bán</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Hình ảnh</label>
                            <input type="file" name="HinhAnhFile" class="form-control" />
                            <small class="text-muted">
                                Ảnh sẽ được lưu vào thư mục <code>/Content/Images</code>.
                            </small>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MoTa, "Mô tả", new { @class = "form-label fw-semibold" })
                            @Html.TextAreaFor(m => m.MoTa, 5, 50,
                                new { @class = "form-control", placeholder = "Mô tả ngắn về sản phẩm..." })
                            @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Lưu sản phẩm
                </button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
            }

        </div>
    </div>
</div>
