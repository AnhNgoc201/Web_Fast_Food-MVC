@model Web_Do_An_Nhanh.Models.NhanVien

@{
    ViewBag.Title = "Thêm nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#eff6ff;
             color:#2563eb;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-user-plus"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#2563eb;">Thêm nhân viên mới</h3>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row">
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenNV, "Họ tên", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.TenNV,
                                new { @class = "form-control", placeholder = "Nhập họ tên nhân viên..." })
                            @Html.ValidationMessageFor(m => m.TenNV, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.Label("MaVT", "Vai trò", new { @class = "form-label fw-semibold" })
                            @Html.DropDownList("MaVT",
                                (SelectList)ViewBag.MaVT,
                                "-- Chọn vai trò --",
                                new { @class = "form-select" })
                            @Html.ValidationMessage("MaVT", "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Email,
                                new { @class = "form-control", placeholder = "Nhập email đăng nhập..." })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.SDT, "Số điện thoại", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.SDT,
                                new { @class = "form-control", placeholder = "Nhập số điện thoại..." })
                            @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MatKhau, "Mật khẩu", new { @class = "form-label fw-semibold" })
                            @Html.PasswordFor(m => m.MatKhau,
                                new { @class = "form-control", placeholder = "Nhập mật khẩu đăng nhập..." })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Lưu nhân viên
                </button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
            }
        </div>
    </div>
</div>
