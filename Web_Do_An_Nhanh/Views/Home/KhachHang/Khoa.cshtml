@model Web_Do_An_Nhanh.Models.KhachHang

@{
    ViewBag.Title = "Khóa khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">

        <div class="d-flex align-items-center">
            <div style="width:42px;height:42px;border-radius:50%;display:inline-flex;
                 align-items:center;justify-content:center;background:#eff6ff;color:#2563eb;
                 margin-right:.75rem;font-size:1.3rem;">
                <i class="fas fa-lock"></i>
            </div>
            <h3 class="fw-bold mb-0" style="color:#2563eb;">Khóa khách hàng</h3>
        </div>

        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>

    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <div class="alert alert-warning mb-3">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Bạn có chắc muốn khóa khách hàng này không? (Khóa xong khách sẽ không đăng nhập được)
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background-color:#fef3c7;">
                        <tr class="fw-bold text-muted">
                            <th style="width:220px;">Thông tin</th>
                            <th>Giá trị</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>Mã KH</td>
                            <td class="fw-semibold">@Model.MaKH</td>
                        </tr>
                        <tr>
                            <td>Họ tên</td>
                            <td class="fw-semibold">@Model.TenKH</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td>SDT</td>
                            <td>@Model.SDT</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ</td>
                            <td>@Model.DiaChi</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-3">
                @using (Html.BeginForm("Khoa", "KhachHang", new { id = Model.MaKH }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning fw-bold me-2">
                        <i class="fas fa-lock me-1"></i> Xác nhận khóa
                    </button>
                }

                <a href="@Url.Action("Index")" class="btn btn-outline-secondary fw-bold">
                    Hủy
                </a>
            </div>

        </div>
    </div>

</div>
