@model Web_Do_An_Nhanh.Models.KhachHang

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#eff6ff;
             color:#2563eb;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-id-card"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#2563eb;">Chi tiết khách hàng</h3>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Mã khách hàng</dt>
                <dd class="col-sm-9">@Model.MaKH</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9 fw-semibold">@Model.TenKH</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.SDT</dd>

                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@Model.DiaChi</dd>
            </dl>

            <div class="mt-4">
                @Html.ActionLink("Sửa khách hàng", "Edit", new { id = Model.MaKH },
                    new { @class = "btn btn-primary me-2" })
                @Html.ActionLink("Quay lại danh sách", "Index", null,
                    new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
