@model Web_Do_An_Nhanh.Models.TinhTrang
@{
    bool isEdit = Model != null && Model.MaTT > 0;
    ViewBag.Title = isEdit ? "Sửa tình trạng" : "Thêm tình trạng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4" style="max-width:600px">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h3 class="text-danger text-center fw-bold mb-4">
                @(isEdit ? "SỬA TÌNH TRẠNG" : "THÊM TÌNH TRẠNG ĐƠN HÀNG")
            </h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                @*@if (isEdit)
                {
                    @Html.HiddenFor(m => m.MaTT)
                }*@

                @(isEdit ? Html.HiddenFor(m => m.MaTT) : null)

                <div class="mb-3">
                    <label class="form-label fw-bold">Tên tình trạng</label>
                    @Html.TextBoxFor(m => m.TenTT, new { @class = "form-control", placeholder = "Ví dụ: Đặt thành công, Đang vận chuyển..." })
                    @Html.ValidationMessageFor(m => m.TenTT, "", new { @class = "text-danger small" })
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">← Quay lại</a>
                    <button type="submit" class="btn btn-danger">Lưu</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
