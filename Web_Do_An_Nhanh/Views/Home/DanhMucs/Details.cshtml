@model Web_Do_An_Nhanh.Models.DanhMuc

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-3">
        <div style="width:42px;height:42px;border-radius:50%;display:flex;
             align-items:center;justify-content:center;background:#eff6ff;
             color:#2563eb;font-size:1.3rem;margin-right:.75rem;">
            <i class="fas fa-info-circle"></i>
        </div>
        <h3 class="fw-bold mb-0" style="color:#2563eb;">Chi tiết danh mục</h3>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Mã danh mục</dt>
                <dd class="col-sm-9">@Model.MaDM</dd>

                <dt class="col-sm-3">Tên danh mục</dt>
                <dd class="col-sm-9 fw-semibold">@Model.TenDM</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.MoTa</dd>
            </dl>

            <div class="mt-4">
                @Html.ActionLink("Sửa danh mục", "Edit", new { id = Model.MaDM },
                    new { @class = "btn btn-primary me-2" })
                @Html.ActionLink("Quay lại danh sách", "Index", null,
                    new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
